{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "Commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@/package": ["package.json"],
      "@/src/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "./index.ts"
  ],
  "exclude": [
    "src/tests/*"
  ]
}
