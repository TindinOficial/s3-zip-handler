{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "Commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "./index.ts", 
    "src/types"  
  ],
  "exclude": [
    "src/tests/*"
  ]
}
