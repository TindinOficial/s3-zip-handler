{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "Commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/package": ["package.json"],
      "@/src": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "lib/**/*"
  ]
}
